#!/bin/bash
## Backup important files.

## Set colors.
RC="\e[0m"
BOLD="\e[1m"
GREEN="\e[32m"
RED="\e[31m"
BLUE="\e[34m"

WARN="${RED}${BOLD} [-] ${RC}"
INFO="${BLUE}${BOLD} [*] ${RC}"
GOOD="${GREEN}${BOLD} [+] ${RC}"

BACKUP_FILES()
{
	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/Documents/KPXC/pswd ] && \
	echo -e "${INFO}-> KeepassXC database" && cp -Lurv ${HOME}/Documents/KPXC/pswd ${HOME}/.bak/${USER}.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.pass.gpg ] && \
	echo -e "${INFO}-> Password" && cp -Lurv ${HOME}/.pass.gpg ${HOME}/.bak/.pass.gpg.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.diary.gpg ] && \
	echo -e "${INFO}-> Diary" && cp -Lurv ${HOME}/.diary.gpg ${HOME}/.bak/.diary.gpg.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.todo.gpg ] && \
	echo -e "${INFO}-> Todo" && cp -Lurv ${HOME}/.todo.gpg ${HOME}/.bak/.todo.gpg.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.note.gpg ] && \
	echo -e "${INFO}-> Note" && cp -Lurv ${HOME}/.note.gpg ${HOME}/.bak/.note.gpg.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.zshrc ] && \
	echo -e "${INFO}-> Zshrc" && cp -Lurv ${HOME}/.zshrc ${HOME}/.bak/.zshrc.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.bashrc ] && \
	echo -e "${INFO}-> Bashrc" && cp -Lurv ${HOME}/.bashrc ${HOME}/.bak/.bashrc.bak

	mkdir -pv ${HOME}/.bak
	[ -f ${HOME}/.nanorc ] && \
	echo -e "${INFO}-> Nanorc" && cp -Lurv ${HOME}/.nanorc ${HOME}/.bak/.nanorc.bak
}

echo -e "\n${INFO}Starting files backup...\n"
BACKUP_FILES
echo -e "\n${GOOD}Files backup done!\n" || echo -e "\n${WARN}Something went wrong!\n"
