#!/bin/bash
BACKUP_SERVER="ideapad"

if [[ ${EUID} -ne '0' ]]
	then
		echo "Run me as root!"
		exit 1
	else
		which rsync > /dev/null
		if [[ ${?} -eq '0' ]]
			then
				FILE="/root/.exclude_from_backup"
				if [[ -f ${FILE} ]]
					then
						rsync \
							-4 \
							--archive \
							--compress \
							--compress-choice=zstd \
							--compress-level=9 \
							--exclude-from=/root/.exclude_from_backup \
							--force \
							--group \
							--ignore-errors \
							--owner  \
							--progress \
							--specials \
							--times \
							--update \
							--verbose \
							/ root@${BACKUP_SERVER}:/mnt/$(hostname)/
					else
						echo "${FILE} not found!"
						exit 1
				fi
			else
				echo "Rsync is not installed!"
				exit 1
		fi
fi
